<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vr.mid.burgerdictionary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BurgerMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BurgerView"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_view" >
        </activity>
        <activity
            android:name=".BurgerList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_list" >
        </activity>
        <activity
            android:name=".BurgerItem"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_item" >
        </activity>
        <activity
            android:name=".BurgerMod"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_mod"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".BurgerAdd"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_add"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".BurgerLogin"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_login" >
        </activity>
        <activity
            android:name=".BurgerAccount"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_account" >
        </activity>
        <activity
            android:name=".BurgerRegister"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_register"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".BurgerMainLogin"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_main_login" >
        </activity>
        <activity
            android:name=".BurgerSearch"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_search"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".BurgerTotal"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_burger_total" >
        </activity>
    </application>

</manifest>
