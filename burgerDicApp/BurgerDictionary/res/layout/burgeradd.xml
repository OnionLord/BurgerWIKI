<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/add_txt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="이름" />
        

        <EditText
            android:id="@+id/add_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <TextView
            android:id="@+id/add_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="브랜드" />

        <EditText
            android:id="@+id/add_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ems="10" >

        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <TextView
            android:id="@+id/add_txt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그림 URL"
            android:layout_weight="2"
            android:gravity="center" />

        <EditText
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ems="10" >

        </EditText>


    </LinearLayout>     
     
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <TextView
           android:id="@+id/add_txt3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:text="단품 칼로리"
           android:textSize="10sp" />

        <EditText
            android:id="@+id/add_calone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:inputType="number|numberDecimal" >

        </EditText>

		       <TextView
		           android:id="@+id/add_txt4"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="1"
		           android:gravity="center"
		           android:text="세트 칼로리"
		           android:textSize="10sp" />

        <EditText
            android:id="@+id/add_calset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:inputType="number|numberDecimal"
            android:ems="10" >

        </EditText>
        
    </LinearLayout>
       
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <TextView
           android:id="@+id/add_txt5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:text="단품 가격"
           android:textSize="10sp" />

        <EditText
            android:id="@+id/add_priceone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
             android:inputType="number" >

        </EditText>

		       <TextView
		           android:id="@+id/add_txt6"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_weight="1"
		           android:gravity="center"
		           android:text="세트 가격"
		           android:textSize="10sp" />

        <EditText
            android:id="@+id/add_priceset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10" 
             android:inputType="number">

        </EditText>
        
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

       <TextView
            android:id="@+id/add_txt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용(HTML)"
            android:layout_weight="2"
            android:gravity="center" />

        <EditText
            android:id="@+id/add_content"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="10"
            
            android:ems="10" >

        </EditText>

		      
        
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

         <Button
             android:id="@+id/add_commit"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:onClick="onClickButton"
             android:text="등록" />

         <Button
             android:id="@+id/add_cancel"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:onClick="onClickButton"
             android:text="취소" />
        
    </LinearLayout>

</LinearLayout>